<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">ユーザー新規登録</h2>

        <%# 「モデル名」にはUserモデルであれば@userを渡しましょう。%>
        <%# 「新規登録機能へのパス」は、devise導入後にrails routesを実行してdevise/registrations#createへのパスを確認し、記載してください。 %>
        <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
          <%= devise_error_messages!%>
            <div class="field">
              <div class = 'field-label'>
                <%= f.label :email, "メールアドレス" %>
              </div>
              <div class = 'field-input'>
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </div>
            </div>
            
            <div class="field">
              <div class = 'field-label'>
                <%= f.label :password, "パスワード（6文字以上）" %>
              </div>
              <div class = 'field-input'>
                <%= f.password_field :password, autocomplete: "new-password" %>
              </div>
            </div>

            <div class="field">
              <div class = 'field-label'>
                <%= f.label :password_confirmation, "パスワード再入力" %>
              </div>
              <div class = 'field-input'>
                <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
              </div>
            </div>

            <div class="field">
              <div class = 'field-label'>
                <%= f.label :name, "ユーザー名" %>
              </div>
              <div class = 'field-input'>
                <%= f.text_field :name %>
              </div>
            </div>

            <div class="field">
              <div class = 'field-label'>
                <%= f.label :profile, "プロフィール" %>
              </div>
              <div class = 'field-input'>
                <%= f.text_area :profile, class: :form__text %>
              </div>
            </div>

            <div class="field">
              <div class = 'field-label'>
                <%= f.label :occupation, "所属" %>
              </div>
              <div class = 'field-input'>
                <%= f.text_area :occupation, class: :form__text %>
              </div>
            </div>

            <div class="field">
              <div class = 'field-label'>
                <%= f.label :position, "役職" %>
              </div>
              <div class = 'field-input'>
                <%= f.text_area :position, class: :form__text %>
              </div>
            </div>

            <div class="actions">
              <%= f.submit "新規登録", class: :form__btn  %>
            </div>
        <% end %>
    </div>
  </div>
</div>